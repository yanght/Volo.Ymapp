@if (recommendList != null && recommendList.Count > 0)
{
    <div class="container-fluid blue_bg">
        <div class="blue_title text-center">
            <span>推荐的行程</span>
        </div>
        <div class="container">
            <div class="row">
                @foreach (var item in recommendList)
                {
                    <div class="col-md-3 col-xs-12">
                        <div class="blue_img_3">
                            <div class="blue_img_3_img">
                                <img src="@(string.IsNullOrEmpty(item.FirstLineImg)?"https://img0.uzaicdn.com/ba/sightGallery/ATT0000815493.jpg":item.FirstLineImg)" alt="">
                                <p>@item.Country</p>
                            </div>
                            <div class="blue_img_3_day">
                                <span class="pull-left">@(item.NumDay)天@(item.NumNight)晚</span>
                                <span class="pull-right">RMB @(item.CustomerPrice)起</span>
                            </div>
                            <div class="blue_img_3_text">
                                <p>@item.Title</p>
                                <a class="btn btn_detail pull-right" href="/line/@(item.Id)">查看详情</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-2 col-xs-6 col-md-offset-5 col-xs-offset-3">
                    <a class="btn btn_more" href="#">更多行程</a>
                </div>
            </div>
        </div>
    </div>
}

@if (lineTypeList != null && lineTypeList.Count > 0)
{
    <div class="container-fluid">
        <div class="blue_title text-center">
            <span>旅行类型</span>
        </div>

        <div class="container">
            <div class="blue_type">
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        @foreach (var item in lineTypeList)
                        {
                            <div class="swiper-slide">
                                <a href="@Url.Action("TypeList","Line",new { lineType=item.Id})">
                                    <div class="blue_img">
                                        <img src="@item.PictureUrl" alt="">
                                    </div>
                                    <p>@item.Name</p>
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <div class="swiper-button swiper-button-prev"><span class="glyphicon glyphicon-menu-left"></span></div>
                <div class="swiper-button swiper-button-next"><span class="glyphicon glyphicon-menu-right"></span></div>
            </div>
        </div>
    </div>
}

